<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tab_home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/user2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/home_whatsup"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textColor="@color/TextView"/>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/rank" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/home_rankText"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="11dp"
            android:text="每日排名"
            android:textColor="@color/TextView"
            android:textSize="22sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8" >

            <TableRow
                android:id="@+id/home_rankMe"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="11dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/home_rankMe_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/TextView" />

                <ImageView
                    android:id="@+id/home_rankMe_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:src="@drawable/user2" />

                <TextView
                    android:id="@+id/home_rankMe_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="dengdeng"
                    android:textColor="@color/TextView" />

                <TextView
                    android:id="@+id/home_rankMe_times"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:text="511圈"
                    android:textColor="@color/TextView" />

                <ImageView
                    android:id="@+id/home_rankMe_heart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:src="@drawable/heart1" />
            </TableRow>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="11dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="-------------------------------"
                android:textColor="@color/TextView" />

            <TableRow
                android:id="@+id/home_rank1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="11dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/home_rank1_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.1"
                    android:text="1"
                    android:textColor="@color/TextView" />

                <ImageView
                    android:id="@+id/home_rank1_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.1"
                    android:src="@drawable/user2" />

                <TextView
                    android:id="@+id/home_rank1_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.3"
                    android:text="dengdeng"
                    android:textColor="@color/TextView" />

                <TextView
                    android:id="@+id/home_rank1_times"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.4"
                    android:text="511圈"
                    android:textColor="@color/TextView" />

                <ImageView
                    android:id="@+id/home_rank1_heart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:src="@drawable/heart1" />

            </TableRow>

            <TableRow
                android:id="@+id/home_rank2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="11dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/home_rank2_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.1"
                    android:text="2"
                    android:textColor="@color/TextView" />

                <ImageView
                    android:id="@+id/home_rank2_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.1"
                    android:src="@drawable/user2" />

                <TextView
                    android:id="@+id/home_rank2_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.3"
                    android:text="xiami"
                    android:textColor="@color/TextView" />

                <TextView
                    android:id="@+id/home_rank2_times"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.4"
                    android:text="508圈"
                    android:textColor="@color/TextView" />

                <ImageView
                    android:id="@+id/home_rank2_heart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:src="@drawable/heart" />
            </TableRow>

            <TableRow
                android:id="@+id/home_rank3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="11dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/home_rank3_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.1"
                    android:text="3"
                    android:textColor="@color/TextView" />

                <ImageView
                    android:id="@+id/home_rank3_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.1"
                    android:src="@drawable/user2" />

                <TextView
                    android:id="@+id/home_rank3_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.3"
                    android:text="Trigo"
                    android:textColor="@color/TextView" />

                <TextView
                    android:id="@+id/home_rank3_times"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.4"
                    android:text="310圈"
                    android:textColor="@color/TextView" />

                <ImageView
                    android:id="@+id/home_rank3_heart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:src="@drawable/heart" />

            </TableRow>

        </TableLayout>

    </LinearLayout>



</LinearLayout>